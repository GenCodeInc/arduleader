<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/parameter_pane_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/parameter_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        class="com.geeksville.andropilot.gui.ParameterListFragment" />

    
    <fragment
        android:id="@+id/parameter_info_fragment"
        android:name="com.geeksville.andropilot.gui.ParameterInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="2"  />

</LinearLayout>